modules = ["nodejs-20", "web"]
run = "npm run dev"

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "npm run dev && cd backend && npm install && npm run dev"]
deploymentTarget = "gce"

[workflows]
runButton = "Full Stack Dev"

